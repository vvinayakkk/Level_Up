# =============================================================================
# Level Up - Environment Variables Template
# =============================================================================
# Copy this file to .env and fill in your actual values
# cp env.example .env

# =============================================================================
# Flask Configuration
# =============================================================================
FLASK_ENV=development
FLASK_DEBUG=1
FLASK_APP=app.py
FLASK_SECRET_KEY=your-secret-key-here-change-this-in-production

# =============================================================================
# API Keys (Required)
# =============================================================================
# Google Generative AI (Gemini) - Get from https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Composio API - For integrations
COMPOSIO_API_KEY=your_composio_api_key_here

# SerpAPI - For web search functionality
SERP_API_KEY=your_serp_api_key_here

# Bland.ai API - For call management (Vinayak's service)
BLAND_API_KEY=your_bland_api_key_here

# Email Configuration
EMAIL_PASSWORD=your_email_app_password_here
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_FROM=teamelevv8@gmail.com

# =============================================================================
# Frontend Configuration
# =============================================================================
REACT_APP_API_URL=http://localhost:5000
REACT_APP_ENVIRONMENT=development

# =============================================================================
# Database Configuration (Optional)
# =============================================================================
# MySQL Database
DATABASE_URL=mysql://levelup_user:levelup_password@db:3306/levelup
MYSQL_ROOT_PASSWORD=rootpassword
MYSQL_DATABASE=levelup
MYSQL_USER=levelup_user
MYSQL_PASSWORD=levelup_password

# PostgreSQL (Alternative)
# DATABASE_URL=postgresql://user:password@db:5432/levelup

# SQLite (Development)
# DATABASE_URL=sqlite:///levelup.db

# =============================================================================
# Redis Configuration (Optional)
# =============================================================================
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=your_redis_password_here

# =============================================================================
# External Services (Optional)
# =============================================================================
# OpenAI (Alternative to Gemini)
OPENAI_API_KEY=your_openai_api_key_here

# Twitter API (For social media integration)
TWITTER_API_KEY=your_twitter_api_key_here
TWITTER_API_SECRET=your_twitter_api_secret_here
TWITTER_ACCESS_TOKEN=your_twitter_access_token_here
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret_here

# LinkedIn API
LINKEDIN_CLIENT_ID=your_linkedin_client_id_here
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret_here

# =============================================================================
# File Storage (Optional)
# =============================================================================
# AWS S3
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_S3_BUCKET=your_s3_bucket_name_here
AWS_REGION=us-east-1

# Google Cloud Storage
GOOGLE_CLOUD_PROJECT_ID=your_project_id_here
GOOGLE_CLOUD_STORAGE_BUCKET=your_bucket_name_here

# =============================================================================
# Monitoring & Logging (Optional)
# =============================================================================
# Sentry for error tracking
SENTRY_DSN=your_sentry_dsn_here

# Logging level
LOG_LEVEL=INFO

# =============================================================================
# Security (Production)
# =============================================================================
# JWT Secret
JWT_SECRET_KEY=your_jwt_secret_key_here

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5000

# =============================================================================
# Development Overrides
# =============================================================================
# Uncomment for development
# DEBUG=True
# TESTING=True 